{
  "name": "static-boilerplate",
  "version": "0.2.0",
  "description": "boilerplate for static pages",
  "main": "gulpfile.js",
  "scripts": {
    "postinstall": "bower install",
    "start": "gulp",
    "test": "./node_modules/karma/bin/karma start karma.conf.js --single-run",
    "build": "gulp dist",
    "deploy": "gulp deploy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abits/static-boilerplate.git"
  },
  "author": "Christoph Martel <chris@codeways.org>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/abits/static-boilerplate/issues"
  },
  "homepage": "https://github.com/abits/static-boilerplate",
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "foundation": "./node_modules/foundation-sites/js/foundation.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "foundation": "foundation"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "devDependencies": {
    "bower": "^1.4.1",
    "browserify": "^10.2.4",
    "browserify-shim": "^3.8.9",
    "chai": "^2.3.0",
    "connect-livereload": "^0.5.3",
    "del": "^1.1.1",
    "express": "^4.12.3",
    "gulp": "^3.8.11",
    "gulp-display-help": "^1.3.0",
    "gulp-if": "^1.2.5",
    "gulp-imagemin": "^2.2.1",
    "gulp-jshint": "^1.10.0",
    "gulp-minify-css": "^1.1.1",
    "gulp-nodemon": "^2.0.3",
    "gulp-rename": "^1.2.2",
    "gulp-rsync": "0.0.5",
    "gulp-sass": "^2.0.0",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-uglify": "^1.2.0",
    "gulp-util": "^3.0.4",
    "jshint-stylish": "^1.0.2",
    "karma": "^0.12.31",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-sinon": "^1.0.4",
    "mocha": "^2.2.4",
    "morgan": "^1.5.3",
    "phantomjs": "^1.9.16",
    "sinon": "^1.14.1",
    "tiny-lr": "^0.1.5",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "dependencies": {
    "foundation-sites": "^5.5.2",
    "jquery": "^2.1.4",
    "lodash": "^3.10.0"
  }
}
